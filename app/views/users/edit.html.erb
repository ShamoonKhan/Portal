<%= form_for @user do |u| %>

    <div>
        <%= u.label :email %><br>
        <%= u.text_field :email %>
    </div>
    <div>
        <%= u.label :first_name %><br>
        <%= u.text_field :first_name %>
    </div>
    <div>
        <%= u.label :Last_name %><br>
        <%= u.text_field :lname %>
    </div>
     <div id ="pictureInput">
    <%= u.label :"Profile Image" %><br />
    <%= u.file_field :avatar, onchange: "readURL(this)"%>
    <div id="image_preview">
       
    </div>
  </div>
    <div>
        <%= u.label :cnic %><br>
        <%= u.text_field :cnic_no %>
    </div>
     <div>
        <%= u.label :contact %><br>
        <%= u.text_field :contact %>
    </div>
     <div>
     <%= u.label :Address %><br/>
     <%= u.text_field :address %>
  </div>
     <div>
    <%= u.submit %>
  </div>
<% end %>



<script>
function readURL(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();
      reader.onload = function (e) {
        $('#img_prev')
          .attr('src', e.target.result)
          .width(100)
          .height(100);
      };
      reader.readAsDataURL(input.files[0]);
    }
  }
</script>