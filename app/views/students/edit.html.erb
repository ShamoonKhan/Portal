<%= form_for @student , url: {action: "update"} do |form| %>
  <div>
        <%= form.label :name %><br>
        <%= form.text_field :name  %>
        
  </div>
   <div>
        <%= form.label :last_name %><br>
        <%= form.text_field :last_name  %>
  </div>
   <div>
        <%= form.label :email %><br>
        <%= form.text_field :email  %>
        
  </div>
   <div>
        <%= form.label :cnic %><br>
        <%= form.text_field :cnic  %>
        
  </div>
   <div>
        <%= form.label :roll_no %><br>
        <%= form.text_field :roll_no  %>
  </div>
   <div>
        <%= form.label :Role %><br>
  <%= form.select :role, User.roles.keys %>
  </div>
  <div class="field">
    <%= form.label :teachers %><br>

<% a=[] %>
<% User.all.where(role: "teacher").each do |t| %>
<% a = a.push(t.name + " " + t.last_name) %>
<% end %>
   
<%= form.select :id , a %>

  </div>
    <%= form.submit %>
  </div>
<% end %>
